<!DOCTYPE html>
<html lang="en">
    <!-- Generated by Cligen @ <%= Time.new.strftime("%Y-%m-%d %H:%M:%S") %> -->
    <head>
        <meta charset="utf-8">
        <title><%= @data["title"] %></title>
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.4/styles/default.min.css">
        <style>
            body {
                padding-top: 40px;
                padding-bottom: 40px;
            }

            ul {
                font-size: 150%;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <!-- Navigation. -->
            <h1><a href="index.html">Back</a> / <%= @data["title"].capitalize %></h1>
            <hr>

            <!-- Sections. -->
            <div>
                <ul>
                    <% @data["sections"].each do |name, hashtag| %>
                        <li><a href="<%= hashtag %>">
                            <%= name.capitalize %>
                        </a></li>
                    <% end %>
                </ul>
            </div>
            <hr>

            <!-- Content. -->
            <div>
                <% for @block in @data["blocks"] %>
                    <!-- <%= @block["type"] %> -->

                    <% if "plaintext" == @block["type"] %>
                        <p class="lead"><%= @block["value"] %></p>
                    <% end %>

                    <% if "code" == @block["type"] %>
                        <pre><code class="<%= @block["lang"] %>"><%= @block["value"] %></code></pre>
                    <% end %>

                    <% if "section" == @block["type"] %>
                        <h2>
                            <a name="<%= @data["sections"][@block["value"]][1..-1] %>">
                                <%= @block["value"] %>
                            </a>
                        </h2>
                    <% end %>
                <% end %>
            </div>
        </div>
        <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.4/highlight.min.js"></script>
        <script>hljs.initHighlightingOnLoad();</script>
    </body>
</html>
